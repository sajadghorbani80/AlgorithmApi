@code {
    private List<List<int>>? answers;
    private int n;
    private async Task Nqueens()
    {
        using var res = await Http.PostAsJsonAsync<int>("api/nvazir", n);
        answers = await res.Content.ReadFromJsonAsync<List<List<int>>>();
    }
}
